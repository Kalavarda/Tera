<UserControl x:Class="Cards.UserControls.CardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="2 0"/>
        </Style>
    </UserControl.Resources>
    <Border BorderThickness="1" BorderBrush="#80808080" CornerRadius="1" Margin="2" Padding="2" Background="#01808080" MouseLeftButtonDown="OnMouseLeftButtonDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="_tbName"/>
                <TextBlock x:Name="_tbTarget"/>
            </StackPanel>
            <TextBlock x:Name="_tbBonus1" Grid.Row="1"/>
            <TextBlock x:Name="_tbBonus2" Grid.Row="2"/>
        </Grid>
    </Border>
</UserControl>
