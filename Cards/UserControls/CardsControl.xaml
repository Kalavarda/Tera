<UserControl x:Class="Cards.UserControls.CardsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border BorderThickness="1" BorderBrush="#80808080" CornerRadius="2" Margin="2" Padding="2">
            <StackPanel>
                <CheckBox x:Name="_cbAvailable" Content="В наличии" Checked="Filter_OnChecked" Unchecked="Filter_OnChecked"/>
            </StackPanel>
        </Border>

        <WrapPanel x:Name="_panel" Grid.Column="1">
        </WrapPanel>
    </Grid>
</UserControl>
